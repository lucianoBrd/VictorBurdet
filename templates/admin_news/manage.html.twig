{% extends "admin.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
<h1>
    {% if editMode %}
        Modification d'une news
    {% else %}
        Ajout d'une news
    {% endif %}
</h1>

{{ form_start(form) }}
{{ form_row(form.category, {'label': 'Catégorie', 'attr': {'placeholder': 'Catégorie'}}) }}
{{ form_row(form.title, {'label': 'Titre', 'attr': {'placeholder': 'Titre'}}) }}
{{ form_row(form.textSmall, {'label': 'Texte de présentation', 'attr': {'placeholder': 'Texte de présentation'}}) }}
{{ form_row(form.text, {'label': 'Texte d\'explication', 'attr': {'placeholder': 'Texte d\'explication'}}) }}
{% if editMode %}
<img width="500" src="{{ asset('assets/uploads/' ~ news.data.name) }}" alt="Card image">
{% endif %}
{{ form_row(form.data.name, {'label': 'Choisir un fichier', (editMode) ? 'required': false : ''}) }}
{{ form_row(form.data.home, {'label': 'Afficher dans l\'accueil'}) }}

<button type="submit" class="btn btn-outline-success">
    {% if editMode %}
        Modifier
    {% else %}
        Ajouter
    {% endif %}
</button>

{{ form_end(form) }}

{% endblock body %}